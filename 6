#include <stdio.h> 
#include <stdlib.h> 
#include <time.h> 
#define N 10 

int main(void) 
{ 
int array[N][N], bufI[N], bufJ[N], i = 0, j = 0, tmp = 0, maxNum = 0, iPos = 0, jPos = 0; 
srand(time(NULL)); 

printf("initial array:\n"); 
for (i = 0; i < N; i++) 
{ 
for (j = 0; j < N; j++) 
{ 
array[i][j] = -100 + rand() % 201; 
printf("%4d ", array[i][j]); 
} 
printf("\n"); 
} 

maxNum = array[0][0]; 
iPos = 0; 
jPos = 0; 

for (i = 0; i < N; i++) 
{ 
for (j = 0; j < N; j++) 
{ 
if (array[i][j] > maxNum) 
{ 
maxNum = array[i][j]; 
iPos = i; 
jPos = j; 
} 
} 
} 

printf("\nmaxNum = %d, iPos = %d, jPos = %d\n", maxNum, (iPos + 1), (jPos + 1)); 
printf("\nfinal array:\n"); 

for (i = 0; i < N; i++) 
{ 
bufJ[i] = array[i][jPos]; 
bufI[i] = array[iPos][i]; 
} 
for (i = 0; i < N; i++) 
{ 
array[iPos][i] = bufJ[i]; 
} 
for (i = 0; i < N; i++) 
{ 
array[i][jPos] = bufI[i]; 
} 

for (i = 0; i < N; i++) 
{ 
for (j = 0; j < N; j++) 
{ 
printf("%4d ", array[i][j]); 
} 
printf("\n"); 
} 
printf("\n"); 

system("pause"); 
return 0; 
}
