#include <stdio.h> 
#include <stdlib.h> 
#include <time.h> 
#define N 10 

int main(void) 
{ 
int array[N][N], i = 0, j = 0, tmp = 0, maxNum = 0, iPos = 0, jPos = 0; 
srand(time(NULL)); 

printf("initial array:\n"); 
for(i = 0; i < N; i++) 
{ 
for(j = 0; j < N; j++) 
{ 
array[i][j] = -1000 + rand() % 2000; 
printf("%5d ", array[i][j]); 
} 
printf("\n"); 
} 

maxNum = array[0][0]; 
iPos = 0; 
jPos = 0; 

for(i = 0; i < N; i++) 
{ 
for(j = 0; j < N; j++) 
{ 
if(array[i][j] > maxNum) 
{ 
maxNum = array[i][j]; 
iPos = i; 
jPos = j; 
} 
} 
} 

printf("\nmaxNum = %d, iPos = %d, jPos = %d", maxNum, (iPos + 1), (jPos + 1)); 
printf("\n\nfinal array:\n"); 

for(i = 0; i < N; i++) 
{ 
tmp = array[iPos][i]; 
array[iPos][i] = array[i][jPos]; 
array[i][jPos] = tmp; 
} 

for(i = 0; i < N; i++) 
{ 
for(j = 0; j < N; j++) 
{ 
printf("%5d ", array[i][j]); 
} 
printf("\n"); 
} 
printf("\n"); 

system("pause"); 
return 0; 
}
